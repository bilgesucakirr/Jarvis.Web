@page "/dashboard"
@using Jarvis.Web.Models
@using Jarvis.Web.Services
@inject VenueApiService VenueService
@inject NavigationManager Nav

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12 text-center text-md-start">
            <h1 class="fw-bold text-dark">Welcome to JARVIS</h1>
            <p class="text-muted">Academic Journal & Conference Management System</p>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="jarvis-card shadow-sm border-0">
                <div class="jarvis-card-header d-flex justify-content-between align-items-center bg-white border-bottom py-3">
                    <h4 class="mb-0 fw-bold text-primary">Active Call for Papers</h4>
                    <i class="bi bi- megaphone-fill text-primary"></i>
                </div>
                <div class="jarvis-card-body p-0">
                    @if (venues == null)
                    {
                        <div class="text-center p-5">
                            <div class="spinner-border text-primary" role="status"></div>
                            <p class="mt-2 text-muted">Fetching latest venues...</p>
                        </div>
                    }
                    else if (!venues.Any())
                    {
                        <div class="p-5 text-center">
                            <div class="alert alert-light border shadow-sm">
                                <i class="bi bi-info-circle fs-2 text-info"></i>
                                <p class="mt-3 mb-0 text-dark fw-bold">No active venues found.</p>
                                <p class="small text-muted">Please check back later for new academic opportunities.</p>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="px-4 py-3">Venue Name</th>
                                        <th class="py-3">Acronym</th>
                                        <th class="py-3">Type</th>
                                        <th class="text-end px-4 py-3">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var venue in venues)
                                    {
                                        <tr>
                                            <td class="px-4 py-3 fw-bold text-dark">@venue.Name</td>
                                            <td class="py-3">
                                                <span class="badge bg-light text-primary border border-primary-subtle">@venue.Acronym</span>
                                            </td>
                                            <td class="py-3">
                                                @if (venue.Type == "Conference")
                                                {
                                                    <span class="badge bg-info-subtle text-info border border-info-subtle">
                                                        <i class="bi bi-people-fill me-1"></i> Conference
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success-subtle text-success border border-success-subtle">
                                                        <i class="bi bi-journal-richtext me-1"></i> Journal
                                                    </span>
                                                }
                                            </td>
                                            <td class="text-end px-4 py-3">
                                                <button class="btn btn-primary btn-sm px-4 rounded-pill shadow-sm"
                                                        @onclick="@(() => Nav.NavigateTo($"/submit/{venue.Id}"))">
                                                    Submit Now
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private List<VenueDto>? venues;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            venues = await VenueService.GetAllVenuesAsync();
        }
        catch (Exception)
        {
            venues = new List<VenueDto>();
        }
    }
}