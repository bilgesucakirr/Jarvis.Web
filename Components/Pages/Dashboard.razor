@page "/dashboard"
@attribute [Authorize]
@using System.Security.Claims
@using Jarvis.Web.Models
@using Jarvis.Web.Services
@inject AuthenticationStateProvider AuthStateProvider
@inject VenueApiService VenueService
@inject SubmissionsClient SubmissionsClient
@inject ReviewsClient ReviewsClient
@inject NavigationManager Nav

@rendermode InteractiveServer

<div class="container py-4">
    <div class="mb-5">
        <h2 class="fw-bold text-dark">Welcome, <span class="text-primary">@userName</span></h2>
        <p class="text-muted">Academic Management Workspace</p>
    </div>

    @if (isLoading)
    {
        <div class="text-center p-5"><div class="spinner-border text-primary" role="status"></div></div>
    }
    else if (userRole == "EditorInChief" || userRole == "Admin")
    {
        <div class="row g-4 mb-5">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="fw-bold text-secondary text-uppercase small ls-1">Managed Venues</h5>
                    <button class="btn btn-sm btn-primary px-3 shadow-sm" @onclick='() => Nav.NavigateTo("/venues/create")'>
                        <i class="bi bi-plus-lg me-1"></i> Create New Venue
                    </button>
                </div>
            </div>

            @if (myManagedVenues != null && myManagedVenues.Any())
            {
                @foreach (var venue in myManagedVenues)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="card border-0 shadow-sm venue-select-card h-100 @(selectedVenueId == venue.Id ? "border-primary-active" : "")"
                             @onclick="() => SelectVenue(venue.Id)">
                            <div class="card-body p-4">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <span class="badge bg-primary bg-opacity-10 text-primary border border-primary-subtle">@venue.Acronym</span>
                                    @if (selectedVenueId == venue.Id)
                                    {
                                        <i class="bi bi-check-circle-fill text-primary fs-5"></i>
                                    }
                                    else
                                    {

                                        <i class="bi bi-arrow-right-circle text-muted"></i>
                                    }
                                </div>
                                <h5 class="fw-bold text-dark mb-1">@venue.Name</h5>
                                <p class="text-muted small mb-0">Management Panel</p>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12"><div class="alert alert-light border text-center py-5">No managed venues found.</div></div>
            }
        </div>

        @if (selectedVenueId != Guid.Empty)
        {
            <!-- SEÇİLİ VENUE İÇİN EDİTÖR DASHBOARD'U ÇAĞIRILIYOR -->
            <div class="fade-in mt-2">
                <EditorDashboard VenueId="selectedVenueId" />
            </div>
        }
        else if (myManagedVenues?.Any() == true)
        {
            <div class="text-center p-5 border rounded-3 bg-light bg-opacity-50">
                <i class="bi bi-hand-index-thumb fs-2 text-muted"></i>
                <p class="text-muted mt-2">Please select a venue above to manage submissions.</p>
            </div>
        }
    }
    else if (userRole == "Reviewer")
    {
        <!-- REVIEWER GÖRÜNÜMÜ: İSTATİSTİK KARTLARI -->
        <h5 class="fw-bold text-secondary text-uppercase small ls-1 mb-3">My Review Summary</h5>

        @if (reviewerAssignments == null)
        {
            <div class="text-center p-5"><div class="spinner-border text-primary"></div></div>
        }
        else
        {
            <div class="row g-4 mb-5">
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 border-0 shadow-sm hover-card bg-info-subtle" @onclick='() => Nav.NavigateTo("/my-reviews")' style="cursor:pointer">
                        <div class="card-body p-4 d-flex align-items-center justify-content-between">
                            <div>
                                <h6 class="text-info-emphasis text-uppercase fw-bold ls-1 mb-1">New Invitations</h6>
                                <h1 class="display-4 fw-bold mb-0 text-dark">@invitationCount</h1>
                                <small class="text-muted">Awaiting Response</small>
                            </div>
                            <i class="bi bi-envelope-paper fs-1 text-info opacity-50"></i>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 border-0 shadow-sm hover-card bg-warning-subtle" @onclick='() => Nav.NavigateTo("/my-reviews")' style="cursor:pointer">
                        <div class="card-body p-4 d-flex align-items-center justify-content-between">
                            <div>
                                <h6 class="text-warning-emphasis text-uppercase fw-bold ls-1 mb-1">Active Reviews</h6>
                                <h1 class="display-4 fw-bold mb-0 text-dark">@pendingReviewCount</h1>
                                <small class="text-muted">In Progress / Action Required</small>
                            </div>
                            <i class="bi bi-pencil-square fs-1 text-warning opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else if (userRole == "Author" || userRole == "User")
    {
        <!-- YAZAR GÖRÜNÜMÜ: SUBMISSIONS & AVAILABLE VENUES -->
        @if (mySubmissions != null && mySubmissions.Any())
        {
            <div class="row mb-5">
                <div class="col-12">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="fw-bold text-secondary text-uppercase small ls-1">My Active Submissions</h5>
                        <button class="btn btn-sm btn-outline-primary shadow-sm" @onclick='() => Nav.NavigateTo("/my-submissions")'>View All</button>
                    </div>
                    <div class="row g-3">
                        @foreach (var sub in mySubmissions.Take(3))
                        {
                            <div class="col-md-4">
                                <div class="card border-0 shadow-sm h-100 submission-quick-card" @onclick='() => Nav.NavigateTo($"/submissions/{sub.Id}")'>
                                    <div class="card-body p-3">
                                        <div class="d-flex justify-content-between mb-2">
                                            <span class="badge @GetStatusClass(sub.Status) super-small">@sub.Status</span>
                                            <small class="text-muted font-monospace" style="font-size: 0.7rem;">@sub.ReferenceNumber</small>
                                        </div>
                                        <h6 class="fw-bold text-dark text-truncate mb-0">@sub.Title</h6>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }

        <div class="row">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="fw-bold text-secondary text-uppercase small ls-1">Available Venues</h5>
                    <div class="input-group input-group-sm w-auto" style="max-width: 250px;">
                        <span class="input-group-text bg-white border-end-0"><i class="bi bi-search text-muted"></i></span>
                        <input type="text" class="form-control border-start-0" placeholder="Search venues..." @bind="searchTerm" @bind:event="oninput" />
                    </div>
                </div>

                @if (allVenues == null)
                {
                    <div class="text-center p-5"><div class="spinner-border text-primary"></div></div>
                }
                else
                {
                    <div class="row g-4">
                        @foreach (var venue in FilteredVenues)
                        {
                            <div class="col-md-6 col-lg-4">
                                <div class="card border-0 shadow-sm h-100 venue-card">
                                    <div class="card-body p-4">
                                        <div class="d-flex justify-content-between mb-3">
                                            <span class="badge bg-dark bg-opacity-10 text-dark border border-dark-subtle">@venue.Type</span>
                                            <span class="fw-bold text-primary">@venue.Acronym</span>
                                        </div>
                                        <h5 class="fw-bold text-dark">@venue.Name</h5>
                                        <p class="text-muted small text-truncate-2 mb-4">@(venue.Description.Length > 100 ? venue.Description.Substring(0, 100) + "..." : venue.Description)</p>
                                        <button class="btn btn-primary w-100 fw-bold rounded-pill" @onclick='() => Nav.NavigateTo($"/submit/{venue.Id}")'>
                                            Submit Manuscript
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <!-- Genel Karşılama (Tanımsız Roller) -->
        <div class="text-center p-5 border rounded-3 bg-light bg-opacity-50">
            <i class="bi bi-person-circle fs-2 text-muted"></i>
            <h5 class="fw-bold mt-3">Welcome to the JARVIS Platform</h5>
            <p class="text-muted">Use the sidebar to navigate your specific workspace.</p>
        </div>
    }
</div>

@code {
    private string userRole = "";
    private string userName = "";
    private string searchTerm = "";
    private List<VenueDto>? myManagedVenues;
    private List<VenueDto>? allVenues;
    private List<SubmissionListModel>? mySubmissions;
    private Guid selectedVenueId = Guid.Empty;
    private bool isLoading = true; // Yükleme state'i eklendi

    // Reviewer İstatistik Alanları
    private List<ReviewAssignmentModel>? reviewerAssignments;
    private int invitationCount = 0;
    private int pendingReviewCount = 0;


    private IEnumerable<VenueDto> FilteredVenues =>
        allVenues?.Where(v => string.IsNullOrEmpty(searchTerm) ||
                         v.Name.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                         v.Acronym.Contains(searchTerm, StringComparison.OrdinalIgnoreCase))
        ?? new List<VenueDto>();

    protected override async Task OnInitializedAsync()
    {
        isLoading = true;
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity?.IsAuthenticated == true)
        {
            userName = user.Identity.Name ?? "User";
            userRole = user.Claims.FirstOrDefault(c => c.Type.Contains("role"))?.Value ?? "User";

            if (userRole == "EditorInChief" || userRole == "Admin")
            {
                myManagedVenues = await VenueService.GetMyManagedVenuesAsync();
                if (myManagedVenues != null && myManagedVenues.Any())
                    selectedVenueId = myManagedVenues.First().Id;
            }
            else if (userRole == "Reviewer")
            {
                // REVIEWER İŞ YÜKÜNÜ YÜKLE
                try
                {
                    reviewerAssignments = await ReviewsClient.GetMyAssignmentsAsync();
                    invitationCount = reviewerAssignments.Count(r => r.Status == "Invited");
                    pendingReviewCount = reviewerAssignments.Count(r => r.Status == "Accepted");
                }
                catch { reviewerAssignments = new(); }
            }
            else if (userRole == "Author" || userRole == "User")
            {
                // YAZAR VE TEMEL USERLAR İÇİN
                allVenues = await VenueService.GetAllVenuesAsync();
                mySubmissions = await SubmissionsClient.GetMySubmissionsAsync();
            }
        }
        isLoading = false;
    }

    private void SelectVenue(Guid id)
    {
        selectedVenueId = id;
        StateHasChanged();
    }

    private string GetStatusClass(string? s) => s switch
    {
        "Submitted" => "bg-info-subtle text-info",
        "UnderReview" => "bg-primary-subtle text-primary",
        "MinorRevisionRequired" => "bg-info text-white",
        "MajorRevisionRequired" => "bg-primary text-white",
        "CameraReadyRequested" => "bg-warning text-dark",
        "CameraReadySubmitted" => "bg-success text-white",
        "Accepted" => "bg-success text-white",
        "Rejected" => "bg-danger text-white",
        _ => "bg-light text-dark border"
    };
}