@page "/my-reviews"
@attribute [Authorize(Roles = "Reviewer")]
@using Jarvis.Web.Models
@using Jarvis.Web.Services
@inject ReviewsClient ReviewsClient
@inject NavigationManager Navigation

@rendermode @(new InteractiveServerRenderMode(prerender: false))

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold text-dark mb-1">My Review Assignments</h2>
        <p class="text-muted small mb-0">List of manuscripts assigned to you for evaluation</p>
    </div>
</div>

<div class="jarvis-card">
    <div class="jarvis-card-body p-0">
        @if (isLoading)
        {
            <div class="p-5 text-center">
                <div class="spinner-border text-primary" role="status"></div>
                <p class="mt-2 text-muted">Fetching your assignments...</p>
            </div>
        }
        else if (assignments.Count == 0)
        {
            <div class="p-5 text-center">
                <i class="bi bi-journal-check fs-1 text-muted opacity-50"></i>
                <p class="mt-3 text-muted">You have no pending assignments.</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Manuscript ID</th>
                            <th>Status</th>
                            <th>Due Date</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in assignments)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="fw-bold text-dark">Submission ID: @item.SubmissionId.ToString().Substring(0, 8)...</div>
                                    <small class="text-muted">Ref: @item.AssignmentId.ToString().Substring(0, 8)</small>
                                </td>
                                <td>
                                    <span class="badge bg-warning bg-opacity-10 text-warning px-3 py-2 rounded-pill">@item.Status</span>
                                </td>
                                <td>
                                    <span class="text-danger small fw-bold"><i class="bi bi-clock me-1"></i> @item.DueAt.ToShortDateString()</span>
                                </td>
                                <td class="text-end pe-4">
                                    <button class="btn btn-jarvis btn-sm" @onclick='() => Navigation.NavigateTo($"/submit-review/{item.AssignmentId}")'>
                                        <i class="bi bi-pencil-square me-1"></i> Start Review
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

@code {
    private List<ReviewAssignmentModel> assignments = new();
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            assignments = await ReviewsClient.GetMyAssignmentsAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
        }
        finally
        {
            isLoading = false;
        }
    }


}