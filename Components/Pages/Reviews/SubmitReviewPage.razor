@page "/submit-review/{AssignmentId:guid}"
@attribute [Authorize(Roles = "Reviewer")]
@using Jarvis.Web.Models
@using Jarvis.Web.Services
@inject ReviewsClient ReviewsClient
@inject NavigationManager Navigation

@rendermode @(new InteractiveServerRenderMode(prerender: false))

<div class="mb-4">
    <button class="btn btn-link p-0 text-decoration-none" @onclick='() => Navigation.NavigateTo("/dashboard")'>
        <i class="bi bi-arrow-left"></i> Back to Dashboard
    </button>
    <h2 class="fw-bold text-dark mt-2">Manuscript Evaluation</h2>
    <p class="text-muted">Assignment ID: @AssignmentId</p>
</div>

@if (isSuccess)
{
    <div class="alert alert-success shadow-sm border-0"><i class="bi bi-check-circle-fill me-2"></i> Evaluation submitted successfully!</div>
}

<div class="jarvis-card mb-4 border-warning">
    <div class="jarvis-card-header bg-warning bg-opacity-10">
        <h3 class="text-dark"><i class="bi bi-shield-lock me-2"></i> Blind Review Protocol</h3>
    </div>
    <div class="jarvis-card-body">
        <p class="mb-0"><strong>Note:</strong> Author identities are hidden to ensure unbiased evaluation. Please focus strictly on the scientific merit of the work.</p>
    </div>
</div>

<EditForm Model="@reviewModel" OnValidSubmit="HandleSubmit" FormName="EvaluationForm">
    <DataAnnotationsValidator />

    <div class="row g-4">
        <!-- Puanlama -->
        <div class="col-md-4">
            <div class="jarvis-card h-100">
                <div class="jarvis-card-body">
                    <label class="form-label">Overall Score (1-5)</label>
                    <InputNumber @bind-Value="reviewModel.OverallScore" class="form-control form-control-lg text-center" />
                    <div class="mt-3 small text-muted">1: Reject, 5: Excellent</div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="jarvis-card h-100">
                <div class="jarvis-card-body">
                    <label class="form-label">Your Confidence (1-5)</label>
                    <InputNumber @bind-Value="reviewModel.Confidence" class="form-control form-control-lg text-center" />
                    <div class="mt-3 small text-muted">How familiar are you with this topic?</div>
                </div>
            </div>
        </div>

        <!-- Dosya Yükleme -->
        <div class="col-md-4">
            <div class="jarvis-card h-100">
                <div class="jarvis-card-body">
                    <label class="form-label">Annotated Manuscript</label>
                    <InputFile OnChange="HandleFileSelected" class="form-control" />
                    <div class="mt-2 small text-muted">Upload PDF with your comments (optional)</div>
                </div>
            </div>
        </div>

        <!-- Yorumlar -->
        <div class="col-12">
            <div class="jarvis-card">
                <div class="jarvis-card-header"><h3>Detailed Comments</h3></div>
                <div class="jarvis-card-body">
                    <div class="mb-4">
                        <label class="form-label">Comments to Author</label>
                        <InputTextArea @bind-Value="reviewModel.CommentsToAuthor" class="form-control" rows="6" placeholder="Provide constructive feedback..." />
                    </div>
                    <div class="mb-0">
                        <label class="form-label">Confidential Comments to Editor</label>
                        <InputTextArea @bind-Value="reviewModel.CommentsToEditor" class="form-control" rows="3" placeholder="Will not be visible to the author." />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-end mt-4 mb-5">
        <button type="submit" class="btn btn-jarvis btn-lg" disabled="@isSubmitting">
            @if (isSubmitting)
            {
                <span>Submitting...</span>
            }
            else
            {

                <span><i class="bi bi-check2-all me-2"></i> Submit Final Evaluation</span>
            }
        </button>
    </div>
</EditForm>

@code {
    [Parameter] public Guid AssignmentId { get; set; }
    private SubmitReviewModel reviewModel = new();
    private IBrowserFile? selectedFile;
    private bool isSubmitting = false;
    private bool isSuccess = false;

    private void HandleFileSelected(InputFileChangeEventArgs e) => selectedFile = e.File;

    private async Task HandleSubmit()
    {
        isSubmitting = true;
        try
        {
            await ReviewsClient.SubmitReviewAsync(AssignmentId, reviewModel, selectedFile);
            isSuccess = true;
            StateHasChanged();
            await Task.Delay(2000);
            Navigation.NavigateTo("/dashboard");
        }
        catch (Exception ex) { Console.WriteLine(ex.Message); }
        finally { isSubmitting = false; }
    }
}