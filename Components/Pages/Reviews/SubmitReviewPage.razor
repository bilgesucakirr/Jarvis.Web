@page "/submit-review/{AssignmentId:guid}"
@attribute [Authorize(Roles = "Reviewer")]
@using Jarvis.Web.Models
@using Jarvis.Web.Services
@inject ReviewsClient ReviewsClient
@inject SubmissionsClient SubmissionsClient
@inject NavigationManager Navigation

@rendermode @(new InteractiveServerRenderMode(prerender: false))

<div class="container py-4">
    <div class="mb-4">
        <button class="btn btn-link p-0 text-decoration-none" @onclick='() => Navigation.NavigateTo("/my-reviews")'>
            <i class="bi bi-arrow-left"></i> Back to My Reviews
        </button>
        <h2 class="fw-bold text-dark mt-2">Manuscript Evaluation</h2>
    </div>

    @if (isLoading)
    {
        <div class="text-center p-5"><div class="spinner-border text-primary"></div></div>
    }
    else if (submission == null)
    {
        <div class="alert alert-danger">Unable to load submission details.</div>
    }
    else
    {
        <!-- MAKALE BİLGİLERİ -->
        <div class="card mb-4 shadow-sm border-primary">
            <div class="card-header bg-primary text-white fw-bold">
                <i class="bi bi-file-earmark-text me-2"></i> Manuscript Information
            </div>
            <div class="card-body bg-light">
                <h4 class="fw-bold text-dark">@submission.Title</h4>
                <div class="mt-3">
                    <span class="fw-bold text-secondary">Abstract:</span>
                    <p class="text-muted fst-italic">@submission.Abstract</p>
                </div>
                <div class="mt-3">
                    <h6 class="fw-bold">Attachments:</h6>
                    @if (submission.Files.Any())
                    {
                        <div class="d-flex gap-2">
                            @foreach (var file in submission.Files)
                            {
                                <a href="@file.FileUrl" target="_blank" class="btn btn-outline-primary bg-white">
                                    <i class="bi bi-file-earmark-pdf-fill text-danger me-2"></i> Download @file.FileName
                                </a>
                            }
                        </div>
                    }
                    else
                    {
                        <span class="text-warning">No files attached.</span>
                    }
                </div>
            </div>
        </div>

        @if (isSuccess)
        {
            <div class="alert alert-success shadow-sm border-0"><i class="bi bi-check-circle-fill me-2"></i> Evaluation submitted successfully!</div>
        }

        <!-- 10. Gereksinim: Review Form İndirme -->
        <div class="alert alert-secondary d-flex justify-content-between align-items-center">
            <div>
                <i class="bi bi-file-text me-2"></i>
                <strong>Evaluation Form:</strong> Please download the official review form to fill out.
            </div>
            <a href="/templates/ReviewFormTemplate.docx" class="btn btn-sm btn-dark"><i class="bi bi-download me-1"></i> Download Form (.docx)</a>
        </div>

        <EditForm Model="@reviewModel" OnValidSubmit="HandleSubmit">
            <DataAnnotationsValidator />

            <div class="row g-4">
                <div class="col-md-6">
                    <div class="jarvis-card h-100">
                        <div class="jarvis-card-body">
                            <label class="form-label fw-bold">Overall Score (1-5)</label>
                            <InputNumber @bind-Value="reviewModel.OverallScore" class="form-control form-control-lg text-center" />
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="jarvis-card h-100">
                        <div class="jarvis-card-body">
                            <label class="form-label fw-bold">Your Confidence (1-5)</label>
                            <InputNumber @bind-Value="reviewModel.Confidence" class="form-control form-control-lg text-center" />
                        </div>
                    </div>
                </div>

                <!-- 10. Gereksinim: Karar/Öneri Seçimi (Revizyon Tipleri) -->
                <div class="col-12">
                    <div class="jarvis-card">
                        <div class="jarvis-card-body">
                            <label class="form-label fw-bold">Recommendation</label>
                            <InputSelect @bind-Value="reviewModel.CommentsToEditor" class="form-select form-select-lg">
                                @* Not: SubmitReviewModel'de Recommendation alanı olmadığı için CommentsToEditor geçici olarak kullanılıyor. 
                                   Gerçek implementasyonda modelde Recommendation alanı olmalıdır. *@
                                <option value="">-- Select Recommendation --</option>
                                <option value="Accept">Accept</option>
                                <option value="MinorRevision">Minor Revision</option>
                                <option value="MajorRevision">Major Revision</option>
                                <option value="Reject">Reject</option>
                            </InputSelect>
                        </div>
                    </div>
                </div>

                <div class="col-12">
                    <div class="jarvis-card">
                        <div class="jarvis-card-header">Detailed Comments</div>
                        <div class="jarvis-card-body">
                            <div class="mb-4">
                                <label class="form-label fw-bold">Comments to Author</label>
                                <InputTextArea @bind-Value="reviewModel.CommentsToAuthor" class="form-control" rows="6" placeholder="Provide constructive feedback..." />
                                <ValidationMessage For="@(() => reviewModel.CommentsToAuthor)" />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- 1. Gereksinim: Zorunlu .docx Yükleme -->
                <div class="col-12">
                    <div class="jarvis-card border-warning">
                        <div class="jarvis-card-body d-flex align-items-center justify-content-between">
                            <div>
                                <label class="form-label fw-bold mb-0">Upload Filled Review Form (.docx)</label>
                                <div class="small text-muted">Mandatory: Please upload the completed form.</div>
                            </div>
                            <div>
                                <InputFile OnChange="HandleFileSelected" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-end mt-4 mb-5">
                <button type="submit" class="btn btn-jarvis btn-lg" disabled="@isSubmitting">
                    @if (isSubmitting)
                    {
                        <span>Submitting...</span>
                    }
                    else
                    {
                        <span><i class="bi bi-check2-all me-2"></i> Submit Evaluation</span>
                    }
                </button>
            </div>
        </EditForm>
    }
</div>

@code {
    [Parameter] public Guid AssignmentId { get; set; }

    private SubmitReviewModel reviewModel = new();
    private SubmissionDetailModel? submission;
    private IBrowserFile? selectedFile;
    private bool isLoading = true;
    private bool isSubmitting = false;
    private bool isSuccess = false;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var assignment = await ReviewsClient.GetAssignmentDetailAsync(AssignmentId);
            if (assignment != null)
            {
                submission = await SubmissionsClient.GetSubmissionDetailAsync(assignment.SubmissionId);
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Load Error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void HandleFileSelected(InputFileChangeEventArgs e) => selectedFile = e.File;

    private async Task HandleSubmit()
    {
        isSubmitting = true;
        try
        {
            await ReviewsClient.SubmitReviewAsync(AssignmentId, reviewModel, selectedFile);
            isSuccess = true;
            StateHasChanged();
            await Task.Delay(2000);
            Navigation.NavigateTo("/my-reviews");
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
        }
        finally
        {
            isSubmitting = false;
        }
    }
}