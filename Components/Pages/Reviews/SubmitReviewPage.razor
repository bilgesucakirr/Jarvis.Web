@page "/submit-review/{AssignmentId:guid}"
@attribute [Authorize(Roles = "Reviewer")]
@using Jarvis.Web.Models
@using Jarvis.Web.Services
@inject ReviewsClient ReviewsClient
@inject SubmissionsClient SubmissionsClient
@inject VenueApiService VenueService
@inject NavigationManager Navigation

@rendermode @(new InteractiveServerRenderMode(prerender: false))

<div class="container py-4">
    <div class="mb-4">
        <button class="btn btn-link p-0 text-decoration-none" @onclick='() => Navigation.NavigateTo("/my-reviews")'>
            <i class="bi bi-arrow-left"></i> Back to My Reviews
        </button>
        <h2 class="fw-bold text-dark mt-2">Manuscript Evaluation</h2>
    </div>

    @if (isLoading)
    {
        <div class="text-center p-5">
            <div class="spinner-border text-primary" role="status"></div>
            <p class="mt-2 text-muted">Loading manuscript and evaluation forms...</p>
        </div>
    }
    else if (submission == null)
    {
        <div class="alert alert-danger shadow-sm">
            <i class="bi bi-exclamation-octagon-fill me-2"></i> Unable to load manuscript details. Please try again later.
        </div>
    }
    else
    {
        <!-- 1. MAKALE BİLGİLERİ -->
        <div class="card mb-4 shadow-sm border-0 border-start border-4 border-primary">
            <div class="card-header bg-white py-3">
                <h5 class="fw-bold mb-0 text-dark"><i class="bi bi-file-earmark-text me-2 text-primary"></i> Manuscript Information</h5>
            </div>
            <div class="card-body bg-light bg-opacity-10">
                <h4 class="fw-bold text-dark mb-3">@submission.Title</h4>
                <div class="mb-3">
                    <span class="badge bg-white text-dark border border-secondary border-opacity-25 shadow-sm px-3">@submission.ReferenceNumber</span>
                </div>
                <div class="mt-3">
                    <h6 class="fw-bold text-secondary small text-uppercase">Abstract:</h6>
                    <p class="text-muted fst-italic">@submission.Abstract</p>
                </div>

                <div class="mt-4">
                    <h6 class="fw-bold text-secondary small text-uppercase">Manuscript Files:</h6>
                    @if (submission.Files.Any())
                    {
                        <div class="d-flex flex-wrap gap-2">
                            @foreach (var file in submission.Files)
                            {
                                <a href="@file.FileUrl" target="_blank" class="btn btn-sm btn-outline-primary bg-white shadow-sm">
                                    <i class="bi bi-download me-2"></i> Download @file.FileName
                                </a>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- 2. DİNAMİK FORM İNDİRME ALANI (404 HATASINI ÇÖZEN KISIM) -->
        <div class="card mb-4 shadow-sm border-0 bg-dark text-white">
            <div class="card-body p-4 d-flex flex-column flex-md-row align-items-center justify-content-between">
                <div class="d-flex align-items-center">
                    <i class="bi bi-file-earmark-word-fill text-info display-6 me-4"></i>
                    <div>
                        <h5 class="fw-bold mb-1">Evaluation Form Required</h5>
                        <p class="mb-0 opacity-75 small">Download the official form for @(venueInfo?.Name ?? "this venue"), fill it, and upload below.</p>
                    </div>
                </div>
                <div class="mt-3 mt-md-0">
                    @if (venueInfo != null && !string.IsNullOrEmpty(venueInfo.ReviewFormUrl))
                    {
                        <a href="@venueInfo.ReviewFormUrl" target="_blank" class="btn btn-info px-4 py-2 fw-bold shadow-sm">
                            <i class="bi bi-cloud-download me-2"></i> Download Form (.docx)
                        </a>
                    }
                    else
                    {
                        <button class="btn btn-outline-secondary text-white-50" disabled>
                            <i class="bi bi-exclamation-triangle me-2"></i> No template uploaded by Editor
                        </button>
                    }
                </div>
            </div>
        </div>

        @if (isSuccess)
        {
            <div class="alert alert-success shadow-sm border-0 animate-fade-in">
                <i class="bi bi-check-circle-fill me-2"></i> <strong>Success!</strong> Evaluation submitted. Redirecting...
            </div>
        }

        <EditForm Model="@reviewModel" OnValidSubmit="HandleSubmit">
            <DataAnnotationsValidator />

            <div class="row g-4">
                <!-- SCORE & CONFIDENCE -->
                <div class="col-md-6">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body">
                            <label class="form-label fw-bold text-secondary small text-uppercase">Overall Score (1-5)</label>
                            <InputNumber @bind-Value="reviewModel.OverallScore" class="form-control form-control-lg text-center fw-bold" />
                            <div class="d-flex justify-content-between mt-2 small text-muted">
                                <span>1: Reject</span><span>5: Excellent</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body">
                            <label class="form-label fw-bold text-secondary small text-uppercase">Reviewer Confidence (1-5)</label>
                            <InputNumber @bind-Value="reviewModel.Confidence" class="form-control form-control-lg text-center fw-bold" />
                            <div class="mt-2 small text-muted text-center">Your expertise level in this topic</div>
                        </div>
                    </div>
                </div>

                <!-- RECOMMENDATION (Gereksinim 10) -->
                <div class="col-12">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body">
                            <label class="form-label fw-bold text-secondary small text-uppercase">Final Recommendation</label>
                            <InputSelect @bind-Value="reviewModel.Recommendation" class="form-select form-select-lg border-primary">
                                <option value="">-- Choose Decision --</option>
                                <option value="Accept">Accept</option>
                                <option value="MinorRevision">Minor Revision</option>
                                <option value="MajorRevision">Major Revision</option>
                                <option value="Reject">Reject</option>
                            </InputSelect>
                            <ValidationMessage For="@(() => reviewModel.Recommendation)" />
                        </div>
                    </div>
                </div>

                <!-- COMMENTS -->
                <div class="col-12">
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-white border-bottom-0 pt-3">
                            <h6 class="fw-bold mb-0">Constructive Feedback</h6>
                        </div>
                        <div class="card-body">
                            <div class="mb-4">
                                <label class="form-label text-muted small">Comments to Author (Visible to Author)</label>
                                <InputTextArea @bind-Value="reviewModel.CommentsToAuthor" class="form-control" rows="6" placeholder="Provide clear feedback for the authors to improve their work..." />
                                <ValidationMessage For="@(() => reviewModel.CommentsToAuthor)" />
                            </div>
                            <div class="mb-0">
                                <label class="form-label text-muted small">Confidential Comments to Editor (Optional)</label>
                                <InputTextArea @bind-Value="reviewModel.CommentsToEditor" class="form-control" rows="3" placeholder="These comments will not be shared with authors." />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- UPLOAD FILLED FORM (.DOCX ENFORCED) -->
                <div class="col-12">
                    <div class="card border-0 shadow-sm border-start border-4 border-warning">
                        <div class="card-body d-flex flex-column flex-md-row align-items-center justify-content-between p-4">
                            <div>
                                <h6 class="fw-bold mb-1">Upload Filled Evaluation Form (.docx)</h6>
                                <p class="text-muted small mb-0">Mandatory: Please upload the document you filled out earlier.</p>
                            </div>
                            <div class="mt-3 mt-md-0 w-50">
                                <InputFile OnChange="HandleFileSelected" class="form-control shadow-none" accept=".docx" />
                                @if (fileError != null)
                                {
                                    <div class="text-danger small mt-1">@fileError</div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-end mt-4 mb-5">
                <button type="submit" class="btn btn-primary btn-lg px-5 shadow fw-bold" disabled="@(isSubmitting || submission == null)">
                    @if (isSubmitting)
                    {
                        <span class="spinner-border spinner-border-sm me-2"></span>
                
                        <span>Submitting...</span>
                    }
                    else
                    {
                        <span><i class="bi bi-check2-all me-2"></i> Submit Evaluation</span>
                    }
                </button>
            </div>
        </EditForm>
    }
</div>

@code {
    [Parameter] public Guid AssignmentId { get; set; }

    private SubmitReviewModel reviewModel = new();
    private SubmissionDetailModel? submission;
    private VenueDetailDto? venueInfo;
    private IBrowserFile? selectedFile;
    private string? fileError;

    private bool isLoading = true;
    private bool isSubmitting = false;
    private bool isSuccess = false;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // 1. Assignment bilgisini al
            var assignment = await ReviewsClient.GetAssignmentDetailAsync(AssignmentId);

            if (assignment != null)
            {
                // 2. Makale detaylarını çek
                submission = await SubmissionsClient.GetSubmissionDetailAsync(assignment.SubmissionId);

                if (submission != null)
                {
                    // 3. Konferans detaylarını çek (Dinamik ReviewFormUrl buradan geliyor)
                    venueInfo = await VenueService.GetVenueDetailsAsync(submission.VenueId);
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Review Page Load Error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void HandleFileSelected(InputFileChangeEventArgs e)
    {
        fileError = null;
        var file = e.File;

        // .docx Zorunluluğu (Gereksinim 1)
        if (!file.Name.EndsWith(".docx", StringComparison.OrdinalIgnoreCase))
        {
            fileError = "Invalid file type. Only .docx is allowed.";
            selectedFile = null;
            return;
        }

        selectedFile = file;
    }

    private async Task HandleSubmit()
    {
        if (selectedFile == null) { fileError = "Please upload the completed evaluation form."; return; }
        if (string.IsNullOrEmpty(reviewModel.Recommendation)) { return; }

        isSubmitting = true;
        try
        {
            await ReviewsClient.SubmitReviewAsync(AssignmentId, reviewModel, selectedFile);
            isSuccess = true;
            StateHasChanged();
            await Task.Delay(2000);
            Navigation.NavigateTo("/my-reviews");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Submit Error: {ex.Message}");
            isSubmitting = false;
        }
    }
}