@page "/submissions/{Id:guid}"
@attribute [Authorize]
@using Jarvis.Web.Models
@using Jarvis.Web.Services
@using System.Security.Claims
@inject SubmissionsClient SubmissionsClient
@inject ReviewsClient ReviewsClient
@inject NavigationManager Nav
@inject AuthenticationStateProvider AuthStateProvider

@rendermode InteractiveServer

<div class="container py-5">
    <!-- Üst Bar -->
    <div class="mb-4 d-flex justify-content-between align-items-center">
        <button class="btn btn-link text-decoration-none text-muted p-0" @onclick='() => Nav.NavigateTo("/dashboard")'>
            <i class="bi bi-arrow-left me-1"></i> Back to Dashboard
        </button>
        <span class="badge rounded-pill fs-6 px-4 py-2 shadow-sm @GetStatusClass(submission?.Status)">@submission?.Status</span>
    </div>

    @if (isLoading)
    {
        <div class="text-center p-5 mt-5">
            <div class="spinner-border text-primary" role="status"></div>
            <p class="mt-3 text-muted">Loading manuscript details...</p>
        </div>
    }
    else if (submission != null)
    {
        <h2 class="fw-bold text-dark mb-4">@submission.Title</h2>

        @* --- EDİTÖR KARAR PANELİ (SADECE EDİTÖRE GÖRÜNÜR) --- *@
        <AuthorizeView Roles="EditorInChief,Admin,TrackChair">
            <Authorized>
                @if (submission.Status == "UnderReview" || submission.Status == "Submitted")
                {
                    <div class="card border-0 shadow-sm mb-4 border-top border-4 border-primary bg-light bg-opacity-50">
                        <div class="card-body p-4">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h5 class="fw-bold text-primary mb-0"><i class="bi bi-gavel me-2"></i>Editorial Decision</h5>
                                <span class="badge bg-white text-dark border px-2 py-1">Pending Action</span>
                            </div>
                            <div class="row g-3">
                                <div class="col-md-8">
                                    <textarea class="form-control border-0 shadow-sm" rows="3" @bind="decisionLetter" placeholder="Write the final decision letter to the author..."></textarea>
                                </div>
                                <div class="col-md-4 d-flex flex-column gap-2">
                                    <button class="btn btn-success fw-bold py-2 shadow-sm" @onclick='() => SubmitDecision("Accepted")'>
                                        <i class="bi bi-check-circle-fill me-2"></i> APPROVE & REQUEST CAMERA READY
                                    </button>
                                    <button class="btn btn-outline-danger fw-bold py-2 shadow-sm" @onclick='() => SubmitDecision("Rejected")'>
                                        <i class="bi bi-x-circle-fill me-2"></i> REJECT MANUSCRIPT
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </Authorized>
        </AuthorizeView>

        @* --- YAZAR AKSİYON PANELİ (SADECE YAZARA GÖRÜNÜR) --- *@
        <AuthorizeView Roles="Author">
            <Authorized>
                @if (submission.Status == "CameraReadyRequested")
                {
                    <div class="card border-0 shadow-sm mb-4 border-start border-4 border-warning bg-warning bg-opacity-10">
                        <div class="card-body p-4 d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="fw-bold text-warning-emphasis mb-1"><i class="bi bi-camera-fill me-2"></i>Action Required: Camera Ready</h5>
                                <p class="mb-0 small text-dark opacity-75">Your paper has been accepted! Please upload the final camera-ready version (.docx) to finalize the process.</p>
                            </div>
                            <button class="btn btn-warning text-dark fw-bold px-4 shadow-sm" @onclick='() => OpenUploadModal("CameraReady")'>
                                <i class="bi bi-upload-fill me-2"></i> Upload Final Version
                            </button>
                        </div>
                    </div>
                }
                else if (submission.Status.Contains("RevisionRequired"))
                {
                    <div class="card border-0 shadow-sm mb-4 border-start border-4 border-info bg-info bg-opacity-10">
                        <div class="card-body p-4 d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="fw-bold text-info-emphasis mb-1"><i class="bi bi-pencil-square me-2"></i>Action Required: Revision</h5>
                                <p class="mb-0 small text-dark opacity-75">The reviewers have requested revisions. Please address their comments and upload your revised manuscript.</p>
                            </div>
                            <button class="btn btn-info text-white fw-bold px-4 shadow-sm" @onclick='() => OpenUploadModal("Revision")'>
                                <i class="bi bi-arrow-repeat me-2"></i> Upload Revision
                            </button>
                        </div>
                    </div>
                }
            </Authorized>
        </AuthorizeView>

        @* --- HAKEM YORUMLARI (HERKESE GÖRÜNÜR) --- *@
        @if (anonymousReviews.Any())
        {
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white py-3 border-0">
                    <h6 class="fw-bold mb-0 text-secondary text-uppercase ls-1"><i class="bi bi-chat-left-quote-fill me-2"></i>Reviewer Feedback</h6>
                </div>
                <div class="card-body bg-light rounded-bottom p-4">
                    @{
                        int rCount = 1;
                    }
                    @foreach (var review in anonymousReviews)
                    {
                        <div class="alert alert-white border shadow-sm mb-3 bg-white p-4">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <strong class="text-primary">Reviewer #@rCount</strong>
                                <span class="badge bg-primary bg-opacity-10 text-primary border border-primary-subtle px-3 py-2">Score: @review.OverallScore / 5</span>
                            </div>
                            <p class="mb-3 text-secondary" style="white-space: pre-wrap;">@review.CommentsToAuthor</p>
                            @if (!string.IsNullOrEmpty(review.AttachmentUrl))
                            {
                                <div class="mt-3 pt-3 border-top border-light">
                                    <a href="@review.AttachmentUrl" target="_blank" class="btn btn-sm btn-outline-danger px-3">
                                        <i class="bi bi-file-earmark-word-fill me-1"></i> Download Reviewer's Annotated File
                                    </a>
                                </div>
                            }
                        </div>
                        rCount++;
                    }
                </div>
            </div>
        }

        <div class="row g-4">
            <!-- Sol: Detaylar -->
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body p-4">
                        <h6 class="text-uppercase text-muted small fw-bold mb-3 ls-1">Abstract</h6>
                        <p class="text-secondary lh-lg mb-4">@submission.Abstract</p>

                        <h6 class="text-uppercase text-muted small fw-bold mb-2 ls-1">Keywords</h6>
                        <div class="mb-4">
                            @foreach (var key in submission.Keywords.Split(','))
                            {
                                <span class="badge bg-light text-dark border me-1 py-2 px-3 fw-normal">@key.Trim()</span>
                            }
                        </div>

                        <h6 class="text-uppercase text-muted small fw-bold mb-3 ls-1">Manuscript Files</h6>
                        <div class="list-group border-0">
                            @foreach (var f in submission.Files)
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center bg-light border-0 mb-2 rounded p-3">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-file-earmark-word-fill text-primary fs-4 me-3"></i>
                                        <div>
                                            <div class="fw-bold small text-dark">@f.FileName</div>
                                            <div class="super-small text-muted text-uppercase">@f.Type</div>
                                        </div>
                                    </div>
                                    <a href="@f.FileUrl" target="_blank" class="btn btn-sm btn-outline-primary rounded-pill px-4">Download</a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sağ: Bilgiler & Yazarlar -->
            <div class="col-lg-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white py-3 border-0">
                        <h6 class="fw-bold mb-0 text-secondary text-uppercase ls-1 small">Submission Information</h6>
                    </div>
                    <div class="card-body p-4 pt-0">
                        <div class="mb-4">
                            <small class="text-muted d-block mb-1">Reference Number</small>
                            <span class="fw-bold font-monospace text-dark">@(submission.ReferenceNumber ?? "DRAFT")</span>
                        </div>
                        <div class="mb-4">
                            <small class="text-muted d-block mb-1">Submission Date</small>
                            <span class="fw-bold text-dark">@submission.CreatedAt.ToLocalTime().ToString("MMMM dd, yyyy")</span>
                        </div>

                        <h6 class="fw-bold text-secondary text-uppercase ls-1 small mt-5 mb-3">Authors</h6>
                        <ul class="list-group list-group-flush border-top">
                            @foreach (var a in submission.Authors)
                            {
                                <li class="list-group-item border-light px-0 py-3">
                                    <div class="fw-bold small text-dark">@a.FirstName @a.LastName</div>
                                    <div class="text-muted truncate-text" style="font-size: 0.75rem;">@a.Email</div>
                                    <div class="text-secondary mt-1" style="font-size: 0.75rem;">
                                        <i class="bi bi-building me-1"></i> @a.Affiliation
                                    </div>
                                    @if (a.IsCorresponding)
                                    {
                                        <span class="badge bg-success bg-opacity-10 text-success border border-success-subtle super-small mt-2">Corresponding Author</span>
                                    }
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@* --- DOSYA YÜKLEME MODALI --- *@
@if (showModal)
{
    <div class="modal-backdrop fade show"></div>
    <div class="modal fade show d-block" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow-lg">
                <div class="modal-header border-0 pb-0">
                    <h5 class="modal-title fw-bold text-dark">Upload @(uploadType == "CameraReady" ? "Final Version" : "Revision")</h5>
                    <button class="btn-close" @onclick='() => showModal = false'></button>
                </div>
                <div class="modal-body pt-4">
                    <div class="text-center mb-4">
                        <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex p-3 mb-2 text-primary">
                            <i class="bi bi-cloud-arrow-up-fill fs-1"></i>
                        </div>
                        <p class="text-muted small">Please ensure your file is in <strong>.docx</strong> format.</p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold small text-secondary">Select Document</label>
                        <InputFile OnChange="HandleFile" class="form-control form-control-lg" accept=".docx" />
                    </div>
                    @if (!string.IsNullOrEmpty(error))
                    {
                        <div class="alert alert-danger d-flex align-items-center small py-2 mt-2">
                            <i class="bi bi-exclamation-circle-fill me-2"></i> @error
                        </div>
                    }
                </div>
                <div class="modal-footer border-0 bg-light rounded-bottom p-3">
                    <button class="btn btn-link text-decoration-none text-secondary" @onclick='() => showModal = false'>Cancel</button>
                    <button class="btn btn-primary px-5 fw-bold shadow-sm" @onclick="DoUpload" disabled="@(file == null || isUploading)">
                        @if (isUploading)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                            <span>Processing...</span>
                        }
                        else
                        {
                            <span>Confirm & Upload</span>
                        }
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<style>
    .ls-1 {
        letter-spacing: 0.5px;
    }

    .super-small {
        font-size: 0.65rem;
    }

    .truncate-text {
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .alert-white {
        background-color: #fff;
    }
</style>

@code {
    [Parameter] public Guid Id { get; set; }
    private SubmissionDetailModel? submission;
    private List<ReviewsClient.AnonymousReviewDto> anonymousReviews = new();
    private bool isLoading = true, showModal = false, isUploading = false;
    private string uploadType = "", error = "", decisionLetter = "";
    private IBrowserFile? file;

    protected override async Task OnInitializedAsync() => await LoadData();

    private async Task LoadData()
    {
        isLoading = true;
        try
        {
            var subTask = SubmissionsClient.GetSubmissionDetailAsync(Id);
            var reviewTask = ReviewsClient.GetAnonymousReviewsAsync(Id);
            await Task.WhenAll(subTask, reviewTask);
            submission = subTask.Result;
            anonymousReviews = reviewTask.Result;
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task SubmitDecision(string decision)
    {
        try
        {
            await SubmissionsClient.RecordDecisionAsync(Id, decision, decisionLetter);
            await LoadData();
        }
        catch (Exception ex) { Console.WriteLine(ex.Message); }
    }

    private void OpenUploadModal(string type)
    {
        uploadType = type;
        showModal = true;
        file = null;
        error = "";
    }

    private void HandleFile(InputFileChangeEventArgs e)
    {
        error = "";
        if (!e.File.Name.EndsWith(".docx", StringComparison.OrdinalIgnoreCase))
        {
            error = "Invalid format. Only .docx allowed.";
            file = null;
            return;
        }
        file = e.File;
    }

    private async Task DoUpload()
    {
        if (file == null) return;
        isUploading = true;
        try
        {
            await SubmissionsClient.UploadRevisionAsync(Id, file, uploadType);
            showModal = false;
            await LoadData();
        }
        catch (Exception ex)
        {
            error = $"Upload failed: {ex.Message}";
        }
        finally
        {
            isUploading = false;
        }
    }

    private string GetStatusClass(string? s) => s switch
    {
        "Submitted" => "bg-info-subtle text-info",
        "UnderReview" => "bg-primary-subtle text-primary",
        "MinorRevisionRequired" => "bg-info text-white",
        "MajorRevisionRequired" => "bg-primary text-white",
        "CameraReadyRequested" => "bg-warning text-dark",
        "CameraReadySubmitted" => "bg-success text-white",
        "Accepted" => "bg-success text-white",
        "Rejected" => "bg-danger text-white",
        _ => "bg-light text-dark border"
    };
}