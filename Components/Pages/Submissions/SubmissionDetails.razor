@page "/submissions/{Id:guid}"
@attribute [Authorize]
@using Jarvis.Web.Models
@using Jarvis.Web.Services
@inject SubmissionsClient SubmissionsClient
@inject NavigationManager Nav

@rendermode InteractiveServer

<div class="container py-4">
    <button class="btn btn-link p-0 mb-3 text-decoration-none" @onclick="GoBack">
        <i class="bi bi-arrow-left"></i> Back to List
    </button>

    @if (submission == null)
    {
        <div class="text-center p-5">
            <div class="spinner-border text-primary"></div>
            <p class="mt-2 text-muted">Loading details...</p>
        </div>
    }
    else
    {
        <!-- 7. Gereksinim: Camera Ready Süreci -->
        @if (submission.Status == "CameraReadyRequested" || submission.Status == "Accepted")
        {
            <div class="alert alert-warning border-warning shadow-sm">
                <h5 class="fw-bold"><i class="bi bi-camera-fill me-2"></i> Camera Ready Submission</h5>
                <p class="mb-2">Your paper has been accepted pending final formatting. Please upload the final .docx version.</p>
                <div class="d-flex gap-2">
                    <button class="btn btn-success" @onclick="OpenUploadModal">Upload Camera Ready Version</button>
                </div>
            </div>
        }

        <!-- 6. Gereksinim: Revizyon istendiyse veya kabul edildiyse hakem yorumlarını göster (Kör) -->
        @if (submission.Status.Contains("Revision") || submission.Status == "Accepted")
        {
            <div class="card mb-4 border-info">
                <div class="card-header bg-info bg-opacity-10 fw-bold">Reviewer Feedback</div>
                <div class="card-body">
                    <p class="text-muted small">Below are the anonymous comments from the reviewers to help improve your manuscript.</p>
                    <!-- Not: Normalde Review servisinden çekilmesi gerekir, burada mockup gösterim yapıyoruz -->
                    <div class="list-group">
                        <div class="list-group-item">
                            <strong>Reviewer #1:</strong>
                            <span class="text-secondary">"The methodology section needs more clarity regarding the dataset selection..."</span>
                        </div>
                        <div class="list-group-item">
                            <strong>Reviewer #2:</strong>
                            <span class="text-secondary">"Excellent contribution, but please fix the typo in Figure 3."</span>
                        </div>
                    </div>
                </div>
            </div>
        }

        <div class="row">
            <!-- Sol Kolon: Makale Bilgileri -->
            <div class="col-md-8">
                <div class="card mb-4 shadow-sm border-0">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <h2 class="fw-bold text-dark mb-0">@submission.Title</h2>
                            <span class="badge bg-primary fs-6">@submission.Status</span>
                        </div>

                        <div class="mb-4 text-muted small">
                            <i class="bi bi-hash"></i> Ref: @submission.ReferenceNumber
                            <span class="mx-2">|</span>
                            <i class="bi bi-calendar3"></i> Submitted: @submission.CreatedAt.ToLocalTime().ToString("dd MMM yyyy")
                        </div>

                        <h5 class="fw-bold text-secondary">Abstract</h5>
                        <p class="text-justify">@submission.Abstract</p>

                        <div class="mt-4">
                            <h6 class="fw-bold text-secondary">Keywords</h6>
                            @foreach (var key in submission.Keywords.Split(','))
                            {
                                <span class="badge bg-light text-dark border me-1">@key.Trim()</span>
                            }
                        </div>
                    </div>
                </div>

                <!-- Dosyalar -->
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-white fw-bold"><i class="bi bi-paperclip me-2"></i> Files</div>
                    <div class="list-group list-group-flush">
                        @foreach (var file in submission.Files)
                        {
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <i class="bi bi-file-earmark-pdf text-danger me-2"></i> @file.FileName
                                    <span class="badge bg-secondary ms-2" style="font-size:0.7em;">@file.Type</span>
                                </div>
                                <a href="@file.FileUrl" target="_blank" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-download"></i> Download
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Sağ Kolon: Yazarlar -->
            <div class="col-md-4">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-white fw-bold"><i class="bi bi-people me-2"></i> Authors</div>
                    <div class="card-body p-0">
                        <ul class="list-group list-group-flush">
                            @foreach (var author in submission.Authors)
                            {
                                <li class="list-group-item">
                                    <div class="fw-bold">
                                        @author.FirstName @author.LastName
                                        @if (author.IsCorresponding)
                                        {
                                            <i class="bi bi-envelope-check text-success ms-1" title="Corresponding Author"></i>
                                        }
                                    </div>
                                    <div class="small text-muted">@author.Affiliation</div>
                                    <div class="small text-muted fst-italic">@author.Country</div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter] public Guid Id { get; set; }
    private SubmissionDetailModel? submission;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            submission = await SubmissionsClient.GetSubmissionDetailAsync(Id);
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex);
        }
    }

    private void GoBack()
    {
        Nav.NavigateTo("/dashboard");
    }

    private void OpenUploadModal()
    {
        // Dosya yükleme modalını aç (Basitleştirilmiş)
        Console.WriteLine("Open Camera Ready Upload Modal");
    }
}