@page "/my-submissions"
@attribute [Authorize]
@using Jarvis.Web.Models
@using Jarvis.Web.Services
@inject SubmissionsClient SubmissionsClient
@inject NavigationManager Navigation

@rendermode InteractiveServer

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark">My Submissions</h2>
            <p class="text-muted small">Track the status of your academic papers.</p>
        </div>
    </div>

    @if (submissions == null)
    {
        <div class="text-center p-5">
            <div class="spinner-border text-primary" role="status"></div>
            <p class="mt-2 text-muted">Loading your submissions...</p>
        </div>
    }
    else if (!submissions.Any())
    {
        <div class="alert alert-light text-center border py-5">
            <i class="bi bi-file-earmark-text fs-1 text-muted"></i>
            <p class="mt-3 mb-0 fw-bold">No submissions found.</p>
            <p class="small text-muted">You haven't submitted any papers yet.</p>
            <button class="btn btn-primary mt-3" @onclick='() => Navigation.NavigateTo("/dashboard")'>Start New Submission</button>
        </div>
    }
    else
    {
        <div class="card shadow-sm border-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="px-4">Ref No</th>
                            <th>Title</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th class="text-end px-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var sub in submissions)
                        {
                            <tr>
                                <td class="px-4">
                                    <span class="font-monospace text-primary fw-bold">@(string.IsNullOrEmpty(sub.ReferenceNumber) ? "DRAFT" : sub.ReferenceNumber)</span>
                                </td>
                                <td>
                                    <div class="fw-bold text-dark">@sub.Title</div>
                                </td>
                                <td>@sub.CreatedAt.ToLocalTime().ToString("MMM dd, yyyy")</td>
                                <td>
                                    <span class="badge @GetStatusClass(sub.Status)">
                                        @sub.Status
                                    </span>
                                </td>
                                <td class="text-end px-4">
                                    <button class="btn btn-outline-secondary btn-sm rounded-pill" @onclick='() => Navigation.NavigateTo($"/submissions/{sub.Id}")'>
                                        View Details
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

@code {
    private List<SubmissionListModel>? submissions;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            submissions = await SubmissionsClient.GetMySubmissionsAsync();
        }
        catch (Exception)
        {
            submissions = new List<SubmissionListModel>();
        }
    }

    private string GetStatusClass(string status) => status switch
    {
        "Draft" => "bg-secondary-subtle text-secondary",
        "Submitted" => "bg-info-subtle text-info",
        "UnderReview" => "bg-primary-subtle text-primary",
        "Accepted" => "bg-success-subtle text-success",
        "Rejected" => "bg-danger-subtle text-danger",
        _ => "bg-light text-dark"
    };
}