    }

    @@media (max-width: 768px) {
        .auth-container {
            flex-direction: column;
        }

        .auth-visual-side {
            flex: 0.3;
            min-height: 200px;
        }

        .auth-form-side {
            flex: 1;
            border-radius: 30px 30px 0 0;
            margin-top: -20px;
        }
    }
</style>