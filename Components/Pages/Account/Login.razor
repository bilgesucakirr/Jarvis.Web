        background: linear-gradient(135deg, rgba(20, 30, 48, 0.85) 0%, rgba(36, 59, 85, 0.9) 100%);
        z-index: 1;
    }

    .auth-content {
        position: relative;
        z-index: 2;
        text-align: center;
        padding: 2rem;
    }

    .auth-form-side {
        flex: 1;
        background-color: #ffffff;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        padding: 3rem;
        box-shadow: -10px 0 20px rgba(0,0,0,0.1);
        z-index: 10;
    }

    .form-wrapper {
        width: 100%;
        max-width: 400px;
    }

    .custom-input {
        border: 2px solid #eee;
        border-radius: 12px;
        padding: 12px 15px;
