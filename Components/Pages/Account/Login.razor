@page "/login"
@layout Jarvis.Web.Components.Layout.EmptyLayout
@using Jarvis.Web.Models
@using Jarvis.Web.Services
@inject IAuthService AuthService
@inject NavigationManager Navigation

@rendermode InteractiveServer

<div class="auth-container">
    <div class="auth-visual-side">
        <div class="auth-overlay"></div>
        <div class="auth-content">
            <!-- Logo Eklendi -->
            <div class="mb-4">
                <img src="images/logo.png" alt="Jarvis Logo" class="rounded-circle bg-white p-2 shadow-lg" style="width: 150px; height: 150px; object-fit: contain;" />
            </div>

            <h3 class="text-light">Academic Conference & Journal Management</h3>
            <p class="text-white-50 mt-3 fs-5">
                Manage your scientific processes from a single platform.
                Fast, Secure, and Modern.
            </p>
        </div>
    </div>

    <div class="auth-form-side">
        <div class="form-wrapper">
            <div class="text-center mb-5">
                <h2 class="fw-bold text-dark">Welcome Back</h2>
                <p class="text-muted">Sign in to your account</p>
            </div>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger d-flex align-items-center" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    <div>@errorMessage</div>
                </div>
            }

            <EditForm Model="loginModel" OnValidSubmit="HandleLogin" FormName="LoginForm">
                <DataAnnotationsValidator />

                <div class="mb-4">
                    <label class="custom-label">Email Address</label>
                    <InputText @bind-Value="loginModel.Email" class="form-control custom-input" placeholder="name@university.edu" />
                    <ValidationMessage For="@(() => loginModel.Email)" />
                </div>

                <div class="mb-4">
                    <label class="custom-label">Password</label>
                    <InputText @bind-Value="loginModel.Password" type="password" class="form-control custom-input" placeholder="••••••••" />
                    <ValidationMessage For="@(() => loginModel.Password)" />
                </div>

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="rememberMe">
                        <label class="form-check-label text-muted" for="rememberMe">Remember Me</label>
                    </div>
                    <a href="#" class="text-decoration-none small fw-bold">Forgot Password?</a>
                </div>

                <button type="submit" class="btn btn-primary w-100 btn-custom-primary">
                    Sign In
                </button>
            </EditForm>

            <div class="text-center mt-4">
                <span class="text-muted">Don't have an account?</span>
                <a href="/register" class="fw-bold text-decoration-none ms-1">Sign Up</a>
            </div>
        </div>
    </div>
</div>

@code {
    private LoginModel loginModel = new();
    private string? errorMessage;

    private async Task HandleLogin()
    {
        var result = await AuthService.Login(loginModel);
        if (result.Success)
        {
            Navigation.NavigateTo("/dashboard");
        }
        else
        {
            errorMessage = result.Message;
        }
    }
}

<style>
    .auth-container {
        height: 100vh;
        width: 100vw;
        overflow: hidden;
        display: flex;
    }

    .auth-visual-side {
        flex: 1.2;
        background-image: url('https://images.unsplash.com/photo-1541339907198-e08756dedf3f?q=80&w=2070&auto=format&fit=crop');
        background-size: cover;
        background-position: center;
