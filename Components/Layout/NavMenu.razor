@using Microsoft.AspNetCore.Components.Authorization
@inject AuthenticationStateProvider AuthStateProvider

<div class="sidebar-header ps-3 pt-3 pb-3 text-white">
    <span class="fs-4 fw-bold">JARVIS</span>
</div>

<div class="nav-scrollable">
    <nav class="flex-column">

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="dashboard" Match="NavLinkMatch.All">
                <span class="bi bi-speedometer2-nav-menu" aria-hidden="true"></span> Dashboard
            </NavLink>
        </div>

        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="profile">
                        <span class="bi bi-person-circle" aria-hidden="true"></span> Profile
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>

        <AuthorizeView Roles="Author">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="my-submissions">
                    <span class="bi bi-file-earmark-text-nav-menu" aria-hidden="true"></span> My Submissions
                </NavLink>
            </div>
        </AuthorizeView>

        <AuthorizeView Roles="Reviewer">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="my-reviews">
                    <span class="bi bi-list-check-nav-menu" aria-hidden="true"></span> My Reviews
                </NavLink>
            </div>
        </AuthorizeView>

        <AuthorizeView Roles="EditorInChief,Admin">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="venues/create">
                    <span class="bi bi-plus-circle" aria-hidden="true"></span> New Venue
                </NavLink>
            </div>
        </AuthorizeView>

        <AuthorizeView Roles="Admin">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="users">
                    <span class="bi bi-people" aria-hidden="true"></span> Users
                </NavLink>
            </div>
        </AuthorizeView>

    </nav>
</div>

<style>
    .bi-speedometer2-nav-menu::before {
        content: "\f59e";
        margin-right: 10px;
    }

    .bi-file-earmark-text-nav-menu::before {
        content: "\f38b";
        margin-right: 10px;
    }

    .bi-list-check-nav-menu::before {
        content: "\f473";
        margin-right: 10px;
    }

    .bi-people::before {
        margin-right: 10px;
    }

    .bi-person-circle::before {
        margin-right: 10px;
    }

    .bi-plus-circle::before {
        margin-right: 10px;
    }

    .sidebar-header {
        background-color: rgba(0, 0, 0, 0.2);
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }
</style>